@page
@model NDDC_IACS_Audit.Pages.Departments.AllDepartmentsModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-3">
            <h4 class="mb-sm-0">All Departments</h4>

            <div class="page-title-right">
                <a href="/Departments/AddDepartment" class="btn btn-success"><i class="ri-add-fill me-1 align-bottom"></i> Add Department</a>
            </div>

        </div>
    </div>
</div>

<row>
    @foreach (var item in Model.Departments)
    {
        <div class="card">
            <div class="card-body align-items-center d-flex justify-content-between">
                <div class="d-flex align-items-center">
                    <p class="pe-3 mb-1">-</p>
                    <h5 class="">@item.DirectorateName</h5>
                </div>
                <span class="d-flex gridjs-td">
                    <a class="fs-4  pt-0 p-2  text-success btn text-center" href="/Departments/EditDepartment">
                        <i class='bx bxs-message-square-edit'></i>
                    </a>
                    <a class="fs-4 pt-0 text-danger btn text-center" asp-page="/Departments/DeleteDepartment" asp-route-id="@item.Id">
                        <i class='bx bxs-trash-alt'></i>
                    </a>
                </span>
            </div>
        </div>
    }
    
</row>